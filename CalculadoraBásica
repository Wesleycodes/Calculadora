print('bem vindo a sua calculadora')
print('para começar a usa-lá voce precisa selecionar uma das opções abaixo: ')
print('1 - soma')
print('2 - subtração')
print('3 - multiplicação')
print('4 - divisão')
sinal = int(input('digite a opção aqui: '))
print ('voce selecionou {}, para prosseguir digite o primeiro numero da'.format(sinal),end= ' ')

if sinal == 1:
    soma1 = int(input('soma: '))
    soma2 = int(input('agora digite o segundo numero da divisão'))
    so = soma1 + soma2

    print('a resposta é: {}'.format(so))
elif sinal == 2:
    subtracao1 = int(input('subtração: '))
    subtracao2 = int(input('agora digite o segundo numero da subtração: '))
    su = subtracao1 - subtracao2

    print('a resposta é: {}'.format(su))
elif sinal == 3:
    multiplicacao1 = int(input('multiplicação: '))
    multiplicacao2 = int(input('agora digite o segundo numero da multiplicação: '))
    m = multiplicacao1 * multiplicacao2

    print ('a resposta é: {}'.format(m))
elif sinal == 4:
    divisao1 = int(input('divisão: '))
    divisao2 = int(input('agora digite o segundo numero da divisão: '))
    d = divisao1 / divisao2
    print ('a resposta é: {}'.format(d))
